<h1 class="display-4 text-center my-5"> Restaurant Reviews 4 U</h1>
<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-4">
        <div class="card mb-4">
          <img src="https://via.placeholder.com/300x150.png?text=Restaurant+Image" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.address %></p>
            <a href="<%= restaurant_path(restaurant) %>" class="btn btn-primary">View Restaurant</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="button">
    <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary"%>
  </div>
</div>
